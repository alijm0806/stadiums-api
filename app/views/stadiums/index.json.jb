@stadiums.map do |stadium|
  {
    id: stadium.id,
    name: stadium.name,
    city: stadium.city,
    address: stadium.address,
    image: stadium.image,
    capacity: stadium.capacity,
    built_year: stadium.built_year,
    lat: stadium.lat,
    lon: stadium.lon,
    coordinates: [stadium.lat, stadium.lon],
  }
end
