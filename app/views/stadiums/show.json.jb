{
  id: @stadium.id,
  name: @stadium.name,
  city: @stadium.city,
  address: @stadium.address,
  image: @stadium.image,
  video_url: @stadium.video_url,
  capacity: @stadium.capacity.to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse,
  built_year: @stadium.built_year,
  lat: @stadium.lat,
  lon: @stadium.lon,
  coordinates: [@stadium.lat, @stadium.lon],
  created_at: @stadium.created_at,
  updated_at: @stadium.updated_at,
}
